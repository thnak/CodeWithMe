@using WebApp.Client.Components.Photo


@attribute [Route("/photo")]
@rendermode InteractiveWebAssembly


<div class="d-flex flex-column gap-0" style="height:calc(100vh - var(--mud-appbar-height));overflow-y:scroll">
    <Virtualize TItem="List<VirtualRowImage.VirtualImage>" ItemSize="300" OverscanCount="20" ItemsProvider="ItemsProvider">
        
        <ItemContent>
            <div style="height: 300px">
                <VirtualRowImage Class="d-flex flex-row flex-wrap gap-0" Images="context" WindowsHeight="300"></VirtualRowImage>
            </div>
        </ItemContent>
        <Placeholder>
        
            <div style="height: 300px;" place-holder>
            </div>
        
        </Placeholder>
    </Virtualize>
</div>