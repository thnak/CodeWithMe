<MudDialog>
    <DialogContent>
        <MudForm Model="@Name" @ref="Form" >
            <MudTextField @bind-Value="Name" For="@(() => Name)" Validation="@Validator.Validation" Label="@AppLang.FolderName" Required T="string" Variant="Variant.Outlined" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" OnClick="@Cancel" Variant="Variant.Outlined" >@AppLang.Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="@Submit" Variant="Variant.Filled" >@AppLang.Submit</MudButton>
    </DialogActions>
</MudDialog>