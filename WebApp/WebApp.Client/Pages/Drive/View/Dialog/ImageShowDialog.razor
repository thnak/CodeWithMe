<MudDialog>

    <DialogContent>
        <style>
            .mud-dialog-title{
                padding: 0px !important;
            }
            .mud-dialog-content{
                margin: 0px !important;
                padding: 0px !important;
            }

        </style>
        <MudPaper Class="mud-height-full mud-width-full" Elevation="0" Style="overflow:hidden; position:relative;" >
            <MudDrawerContainer Class="mud-height-full" >
                <MudDrawer Anchor="Anchor.End" @bind-Open="@_open" Color="Color.Default" Width="min(500px, 100vw)" Elevation="0" Variant="@DrawerVariant.Persistent" >
                    <MudDrawerHeader>
                        <MudText Typo="Typo.h6" >@File.FileName</MudText>
                    </MudDrawerHeader>

                    <div class="d-flex flex-column gap-3 pa-3" >
                        <MudText>File size: @File.FileSize.ToString("N0")</MudText>
                        <MudText>Modified date: @File.ModifiedDate</MudText>
                    </div>
                </MudDrawer>

                <div class="d-flex flex-column mud-height-full" >
                    <MudListSubheader Class="align-center d-flex flex-row gap-2 pb-2" >

                        <MudTooltip Arrow Color="Color.Secondary" Placement="Placement.Bottom" Text="@AppLang.Close" >
                            <MudIconButton Class="aspect-1-1 mr-3 rounded-circle" Color="Color.Default" Icon="@Icons.Material.Filled.Close" OnClick="@CloseDialog" Size="Size.Small" Variant="Variant.Outlined" />
                        </MudTooltip>

                        <MudChip Class="d-md-block d-none mx-0 my-2" Color="Color.Primary" Icon="@Icons.Material.Filled.FormatPaint" Size="Size.Small" T="string" >Remix</MudChip>
                        <MudChip Class="d-md-block d-none mx-0 my-2" Color="Color.Secondary" Icon="@Icons.Material.Filled.Bookmark" Size="Size.Small" T="string" >Save</MudChip>
                        <MudChip Class="d-md-block d-none mx-0 my-2" Color="Color.Tertiary" Icon="@Icons.Material.Filled.Image" Size="Size.Small" T="string" >View post</MudChip>
                        <MudChip Class="d-md-block d-none mx-0 my-2" Color="Color.Tertiary" Icon="@Icons.Material.Filled.Bolt" Size="Size.Small" T="string" >Tip</MudChip>

                        <MudSpacer />
                        <MudTooltip Arrow Color="Color.Secondary" Placement="Placement.Bottom" Text="@AppLang.Download" >
                            <MudIconButton Class="aspect-1-1 rounded-circle" Color="Color.Default" Icon="@Icons.Material.Filled.ArrowDownward" Size="Size.Small" Variant="Variant.Outlined" />
                        </MudTooltip>

                        <MudTooltip Arrow Color="Color.Secondary" Placement="Placement.Bottom" Text="@AppLang.Share" >
                            <MudIconButton Class="aspect-1-1 rounded-circle" Color="Color.Default" Icon="@Icons.Material.Filled.Share" Size="Size.Small" Variant="Variant.Outlined" />
                        </MudTooltip>
                        <MudTooltip Arrow Color="Color.Secondary" Placement="Placement.Bottom" Text="@AppLang.Bookmark" >
                            <MudIconButton Class="aspect-1-1 rounded-circle" Color="Color.Default" Icon="@Icons.Material.Filled.Flag" Size="Size.Small" Variant="Variant.Outlined" />
                        </MudTooltip>

                        <MudTooltip Arrow Color="Color.Secondary" Placement="Placement.Bottom" Text="@AppLang.Sidebar" >
                            <MudIconButton Class="aspect-1-1 ml-3 rounded-circle" Color="Color.Default" Icon="@(_open ? Icons.Material.Filled.SwitchRight : Icons.Material.Filled.SwitchLeft)" OnClick="@ChangeSideBar" Size="Size.Small" Variant="Variant.Outlined" />
                        </MudTooltip>


                    </MudListSubheader>

                    <div class="align-center d-flex flex-1 justify-center overflow-hidden" >
                        <img alt="@File.FileName" src="@ImageUrl" />
                    </div>


                </div>
            </MudDrawerContainer>
        </MudPaper>
    </DialogContent>
</MudDialog>