<MudDialogProvider MaxWidth="MaxWidth.False" Position="DialogPosition.Center" />
<MudSnackbarProvider />
<ThemeProvider />
<MudPopoverProvider />
<BlazoredToasts Position="ToastPosition.BottomRight"
                Timeout="10"
                IconType="IconType.FontAwesome"
                ErrorIcon="fa-solid fa-bug"
                InfoIcon="fa-solid fa-info"
                SuccessIcon="fa-regular fa-circle-check"
                WarningIcon="fa-solid fa-triangle-exclamation" 
                ShowProgressBar="true" PauseProgressOnHover="true"/>

<MudBreakpointProvider>
    <Router AppAssembly="@typeof(Program).Assembly" >
        <Found Context="routeData" >
            <ErrorBoundary>
                <ChildContent>

                    <AuthorizeRouteView DefaultLayout="@typeof(MainLayout)" RouteData="@routeData" >
                        <NotAuthorized>
                            <AccessDenied />
                        </NotAuthorized>
                        <Authorizing>
                            <Loading />
                        </Authorizing>
                    </AuthorizeRouteView>

                </ChildContent>
                <ErrorContent Context="ex" >
                    <ErrorHanding ErrorMessage="@EncodeException(ex)" />
                </ErrorContent>
            </ErrorBoundary>
        </Found>
        <NotFound>
            <NotFoundComponent />
        </NotFound>
        <Navigating>
            <Loading />
        </Navigating>
    </Router>
</MudBreakpointProvider>