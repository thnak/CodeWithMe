<MudDialog>
    <DialogContent>
        <MudForm @ref="Form" >
            <MudTextField @bind-Value="NewValueField" For="@(() => NewValueField)" Label="@FieldName" T="string" Variant="Variant.Outlined" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" Class="rounded-pill" OnClick="@Cancel" Variant="Variant.Outlined" >@AppLang.Cancel</MudButton>
        <MudButton Color="Color.Primary" Class="rounded-pill" OnClick="@Submit" Variant="Variant.Filled" >@AppLang.Submit</MudButton>
    </DialogActions>
</MudDialog>