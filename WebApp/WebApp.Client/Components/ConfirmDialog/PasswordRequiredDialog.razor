<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Class="mb-n1 mr-3" Color="MudColor.Error" Icon="fa-solid fa-lock"/>
            @Dialog.Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="Form" Class="d-flex flex-row gap-3">
            <MudTextField Variant="Variant.Outlined" @bind-Value="Password" Required Immediate For="@(() => Password)" Label="@AppLang.Password"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="MudColor.Error" Class="rounded-pill" OnClick="@Cancel" Variant="Variant.Outlined">@AppLang.Cancel</MudButton>
        <MudButton Color="MudColor.Success" Class="rounded-pill" OnClick="@Ok" Variant="Variant.Filled">@AppLang.Submit</MudButton>
    </DialogActions>
</MudDialog>