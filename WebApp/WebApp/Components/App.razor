@code
{
    private string Lang { get; } = Thread.CurrentThread.CurrentCulture.Name;
    [CascadingParameter] private HttpContext HttpContext { get; set; } = default!;

    private IComponentRenderMode? RenderModeForPage()
    {
        var mode = HttpContext.GetEndpoint()?.Metadata.GetMetadata<RenderModeAttribute>()?.Mode;
        if (mode == null) return null;

        if (mode == InteractiveWebAssembly)
        {
            return new InteractiveWebAssemblyRenderMode(false);
        }

        if (mode == InteractiveServer)
        {
            return new InteractiveServerRenderMode();
        }

        if (mode == InteractiveAuto) return new InteractiveAutoRenderMode(false);

        return default;
    }

}